<%- include('./partials/heards') %> <i class="fa fa-info-circle" aria-hidden="true"></i>
    <div class="container">
        <div class="card">
            <div class="card-title">
                <%= pergunta.titulo %>
            </div>      
            <div class="card-body">
                <%= pergunta.descricao %>
            </div>
        </div>
        <form method="post" action="/responder">
            <input type="hidden" name="perguntaId" value='<%= pergunta.id %>'>
            <div class="form-group">
              <label for="">Responda</label>
              <textarea class="form-control" name="corpo" id="" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <% respostas.forEach(resposta =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p class="card-text">
                        <%= resposta.corpo %>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
